<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/train_image"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="40px"
            android:background="@drawable/learning_ability" />

        <TextView
            android:id="@+id/train_Welder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@id/train_image"
            android:text="焊工"
            android:textColor="@color/colorBlack"
            android:textSize="30px" />

        <TextView
            android:id="@+id/train_Time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170px"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@id/train_Welder"
            android:text="限时优惠："
            android:textColor="@color/colorRed"
            android:textSize="30px" />

        <TextView
            android:id="@+id/train_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="50px"
            android:layout_toRightOf="@id/train_Time_limit"
            android:text="￥6000"
            android:textColor="@color/colorRed"
            android:textSize="30px" />

        <RelativeLayout
            android:id="@+id/train_Recommending_employment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/train_Welder"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/train_image">

            <ImageView
                android:id="@+id/train_Recommend_image"
                android:layout_width="120px"
                android:layout_height="36px"
                android:background="@drawable/square" />

            <TextView
                android:id="@+id/train_tuijianjiuye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:gravity="center_vertical"
                android:padding="5px"
                android:text="推荐就业"
                android:textColor="@color/colorRed"
                android:textSize="24px" />

            <ImageView
                android:layout_width="200px"
                android:layout_height="40px"
                android:background="@drawable/guojia"
                android:layout_toRightOf="@id/train_Recommend_image"
                android:layout_marginLeft="20px"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/train_Recommending_employment"
            android:layout_toRightOf="@id/train_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            >
            <TextView
                android:id="@+id/train_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10560人报名"
                android:textSize="32px"
                />
            <View
                android:id="@+id/train_view"
                android:layout_toRightOf="@id/train_sign_up"
                android:layout_marginLeft="10px"
                android:layout_width="2px"
                android:layout_height="40px"
                android:background="@color/colorGray"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/train_tuijian"
                android:layout_toRightOf="@id/train_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐入职："
                android:textSize="32px"
                android:layout_marginLeft="10px"
                />

            <TextView
                android:id="@+id/train_tuijianruzhi"
                android:layout_toRightOf="@id/train_tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2336"
                android:textSize="32px"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="10px"
                />

            <TextView
                android:layout_toRightOf="@id/train_tuijianruzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textSize="32px"
                android:layout_marginLeft="10px"
                />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="30px"
        android:background="@color/colorGray" />


</LinearLayout>