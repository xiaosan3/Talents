<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_measuring"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longmingxin.talent.talents.ui.newactivity.MeasuringActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="@color/colorRed">

        <ImageView
            android:id="@+id/measuring_return_button"
            android:layout_width="30px"
            android:layout_height="40px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="40px"
            android:background="@drawable/return_button"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:text="考核测评"
            android:textColor="@color/colorWhite"
            android:textSize="40px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginTop="30px"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、"
            android:textSize="50px"
            android:layout_marginLeft="10px"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="(多选)   在编织你的人际关系网时，被考虑的人选一般是:"
            android:textColor="@color/colorBlack"
            android:textSize="36px"
            android:layout_marginRight="10px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        >
        <ImageView
            android:id="@+id/measring_one"
            android:layout_width="36px"
            android:layout_height="36px"
            android:background="@drawable/ellipse_measuring"
            android:layout_marginLeft="80px"
            android:clickable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上司及有钱有势的人"
            android:layout_marginLeft="10px"
            android:textSize="30px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        >
        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:background="@drawable/ellipse_measuring"
            android:layout_marginLeft="80px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="诚实且心善的人"
            android:layout_marginLeft="10px"
            android:textSize="30px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        >
        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:background="@drawable/ellipse_measuring"
            android:layout_marginLeft="80px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社会地位和自己差不多的人"
            android:layout_marginLeft="10px"
            android:textSize="30px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginTop="50px"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2、"
            android:textSize="50px"
            android:layout_marginLeft="10px"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="(单选)   对那些精神或者物质上帮助过你的人,你:"
            android:textColor="@color/colorBlack"
            android:textSize="36px"
            android:layout_marginRight="10px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        >
        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:background="@drawable/ellipse_measuring"
            android:layout_marginLeft="80px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铭记在心，永世不忘"
            android:layout_marginLeft="10px"
            android:textSize="30px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        >
        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:background="@drawable/ellipse_measuring"
            android:layout_marginLeft="80px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认为是朋友应做的，不必牵挂在心"
            android:layout_marginLeft="10px"
            android:textSize="30px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        >
        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:background="@drawable/ellipse_measuring"
            android:layout_marginLeft="80px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时过境迁，随风而逝吧"
            android:layout_marginLeft="10px"
            android:textSize="30px"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="750px"
            android:layout_height="100px"
            android:layout_centerInParent="true"
            android:layout_marginTop="40px"
            android:textColor="@color/colorWhite"
            android:text="提交"
            android:textSize="40px"
            android:background="@color/colorRed"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>
