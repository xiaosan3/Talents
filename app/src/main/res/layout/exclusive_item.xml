<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        >

        <TextView
            android:id="@+id/exclusive_Engineer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="土建/监理工程师"
            android:textSize="36px"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/exclusive_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6K-10K"
            android:textSize="36px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:textColor="@color/colorRed"
            />
        <TextView
            android:id="@+id/exclusive_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="土建/监理工程师"
            android:textSize="36px"
            android:layout_marginRight="20px"
            android:layout_below="@id/exclusive_Engineer"
            android:layout_marginTop="20px"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"
        android:layout_marginTop="40px"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:paddingBottom="30px"
        >
        <TextView
            android:id="@+id/exclusive_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="山东-济南市："
            android:textSize="24px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            />

        <TextView
            android:id="@+id/exclusive_Education"
            android:layout_toRightOf="@id/exclusive_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三年经验  大专以上学历"
            android:textSize="24px"
            android:layout_marginTop="20px"
            />

        <TextView
            android:id="@+id/exclusive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-09-02"
            android:textSize="24px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>