<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.longmingxin.talent.talents.ui.login.NewPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="@color/colorRed">

        <ImageView
            android:id="@+id/password_return_button"
            android:layout_width="30px"
            android:layout_height="40px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="40px"
            android:background="@drawable/return_button"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:text="确认密码"
            android:textColor="@color/colorWhite"
            android:textSize="40px" />
    </RelativeLayout>

    <ImageView
        android:layout_width="137px"
        android:layout_height="84px"
        android:layout_gravity="center"
        android:layout_marginTop="82px"
        android:src="@mipmap/login_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:gravity="center"
        android:text="龙才网"
        android:textColor="#484848"
        android:textSize="36px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px">

        <ImageView
            android:id="@+id/img_youhu"
            android:layout_width="48px"
            android:layout_height="80px"
            android:layout_marginLeft="104px"
            android:src="@mipmap/yonghu" />

        <EditText
            android:id="@+id/password_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26px"
            android:layout_marginRight="75px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/img_youhu"
            android:background="@null"
            android:hint="请输入新密码"
            android:textSize="28px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_youhu"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@drawable/dottedline"
            android:layerType="software" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px">

        <ImageView
            android:id="@+id/img_yanzhengma"
            android:layout_width="48px"
            android:layout_height="80px"
            android:layout_marginLeft="104px"
            android:src="@drawable/pwd_image" />

        <EditText
            android:id="@+id/password_userYanZhengMa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26px"
            android:layout_marginRight="75px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/img_yanzhengma"
            android:background="@null"
            android:hint="确认密码"
            android:textSize="28px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_yanzhengma"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@drawable/dottedline"
            android:layerType="software" />

    </RelativeLayout>

    <Button
        android:id="@+id/password_But"
        android:layout_width="600px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginTop="202px"
        android:background="@drawable/login"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="32px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"

        >

        <TextView
            android:id="@+id/line"
            android:layout_width="276px"
            android:layout_height="wrap_content"
            android:background="@drawable/dottedline"
            android:layerType="software" />

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/line"
            android:text="其它登录方式"
            android:textColor="@color/colorRed"
            android:textSize="24px" />

        <TextView
            android:layout_width="276px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/mode"
            android:background="@drawable/dottedline"
            android:layerType="software" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/password_Wechat"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="135px"
            android:src="@drawable/wechat" />

        <ImageView
            android:id="@+id/password_WeiBo"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="120px"
            android:src="@drawable/weibo" />

        <ImageView
            android:id="@+id/password_QQ"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="120px"
            android:layout_marginRight="135px"
            android:src="@drawable/qq" />
    </LinearLayout>


</LinearLayout>
