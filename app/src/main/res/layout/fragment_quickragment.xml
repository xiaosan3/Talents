<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.longmingxin.talent.talents.ui.login.newfragment.Quickragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        >
        <ImageView
            android:id="@+id/img_youhu"
            android:layout_width="40px"
            android:layout_height="70px"
            android:layout_marginLeft="104px"
            android:src="@drawable/pone" />

        <EditText
            android:layout_toRightOf="@id/img_youhu"
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26px"
            android:layout_marginRight="75px"
            android:layout_marginTop="20px"
            android:hint="请输入手机号"
            android:textSize="28px"
            android:background="@null"
            />
        <TextView
            android:layout_below="@id/img_youhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@drawable/dottedline"
            android:layerType="software"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img_yanzhengma"
            android:layout_width="40px"
            android:layout_height="70px"
            android:layout_marginLeft="104px"
            android:src="@drawable/yanzhen" />

        <EditText
            android:layout_toRightOf="@id/img_yanzhengma"
            android:id="@+id/login_Yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26px"
            android:layout_marginRight="75px"
            android:layout_marginTop="20px"
            android:hint="验证码"
            android:textSize="28px"
            android:background="@null"
            />
        <TextView
            android:layout_below="@id/img_yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@drawable/dottedline"
            android:layerType="software"/>
        <View
            android:id="@+id/caurse_view"
            android:layout_width="2px"
            android:layout_height="42px"
            android:layout_marginLeft="530px"
            android:layout_marginTop="20px"
            android:background="@color/colorRed" />

        <TextView
            android:id="@+id/loging_seconds"
            android:layout_width="wrap_content"
            android:layout_height="42px"
            android:layout_marginLeft="560px"
            android:layout_marginTop="25px"
            android:text="获取验证码"
            android:textColor="@color/colorRed"
            android:textSize="24px" />
    </RelativeLayout>
    <Button
        android:id="@+id/login_But"
        android:layout_width="600px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:background="@drawable/login"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="32px" />

    <TextView
        android:id="@+id/login_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500px"
        android:layout_marginTop="48px"
        android:text="立即注册"
        android:textColor="@color/colorRed"
        android:textSize="28px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"

        >

        <TextView
            android:id="@+id/line"
            android:layout_width="276px"
            android:layout_height="wrap_content"
            android:background="@drawable/dottedline"
            android:layerType="software" />

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/line"
            android:text="其它登录方式"
            android:textColor="@color/colorRed"
            android:textSize="24px" />

        <TextView
            android:layout_width="276px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/mode"
            android:background="@drawable/dottedline"
            android:layerType="software" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_Wechat"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="135px"
            android:src="@drawable/wechat" />

        <ImageView
            android:id="@+id/login_WeiBo"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="120px"
            android:src="@drawable/weibo" />

        <ImageView
            android:id="@+id/login_QQ"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="120px"
            android:layout_marginRight="135px"
            android:src="@drawable/qq" />
    </LinearLayout>


</LinearLayout>
